  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  Notion: {
    name: "Notion",
    class: "bg-[#000000] text-white",
    icon: Notion,
  },
  Android: {
    name: "Android",
    class: "bg-[#000] text-white",
    icon: Android,
  },
  Swift: {
    name: "Swift",
    class: "bg-[#000] text-white",
    icon: Swift,
  },
  Firebase: {
    name: "Firebase",
    class: "bg-[#000] text-white",
    icon: Firebase,
  },
  Laravel: {
    name: "Laravel",
    class: "bg-[#000] text-white",
    icon: Laravel,
  },
  MySQL: {
    name: "MySQL",
    class: "bg-[#000] text-white",
    icon: MySQL,
  },
  Vue: {
    name: "Vue",
    class: "bg-[#000] text-white",
    icon: Vue,
  },
  React: {
    name: "React",
    class: "bg-[#000] text-white",
    icon: React,
  },
  Stripe: {
    name: "Stripe",
    class: "bg-[#000] text-white",
    icon: Stripe,
