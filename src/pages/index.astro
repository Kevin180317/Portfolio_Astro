---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/icons/LinkedinIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../components/icons/GithubIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import Profile from "../components/Profile.astro";
import SectionContainer from "../components/SectionContainer.astro";
import TimeLine from "../components/TimeLine.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
import DocumentIcon from "../components/icons/Document.astro";

const startYear = 2021;
const currentYear = new Date().getFullYear();
const yearsExperience = currentYear - startYear;
---

<Layout
  title="Kevin Okhuysen - Desarrollo Web y Apps Modernas"
  description="Portafolio de Kevin Okhuysen, desarrollador especializado en crear sitios web y aplicaciones móviles de alto impacto. Descubre proyectos innovadores, experiencia profesional y soluciones tecnológicas para el sector salud y más."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32" id="home">
      <div
        class="rounded-full bg-gray-900 text-white text-4xl font-bold flex justify-center items-center size-24 mb-4"
      >
        KO
      </div>

      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hola, Soy Kevin.
        <a
          href="https://www.linkedin.com/in/kevin-ortega-9abb6b235/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-black dark:text-white text-start leading-relaxed max-w-[700px]"
      >
        <span class="font-semibold">
          +{yearsExperience} años de experiencia profesional
        </span>
        <span class="text-violet-800 dark:text-violet-200">
          como Desarrollador Web y de Aplicaciones Móviles,
        </span>
        <span class="text-black dark:text-white">
          con un enfoque especializado en soluciones para el sector médico.
        </span>
        <span class="text-black dark:text-white">
          Radicado en Tijuana, México.
        </span>
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://linkedin.com/in/kevin-ortega-9abb6b235">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/kevin180317">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:okhuysen.dev@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          okhuysen.dev@gmail.com
        </SocialPill>
        <SocialPill href="/cv.pdf" download="cv.pdf">
          <DocumentIcon class="size-4 md:size-6" />
          Descargar CV
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="lenguajes">
      <div class="mt-8">
        <Profile />
      </div>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <TimeLine />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
